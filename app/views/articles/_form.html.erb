<%= form_for(@article, html: {mutlipart: true}) do |f| %>
	<ul>
		<%= @article.errors.full_messages.each do |error| %>
			<li>
				<%= error %>
			</li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %></br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :tags_list %></br>
		<%= f.text_field :tags_list %>
	</p>
	<p>
		<%= f.label :body %></br>
		<%= f.text_area :body %>
	</p>
	<p>
		<% str="" %>
		<% if @article.article_images.exists? %>
			<% @article.article_images.each do |a| %>
				<div style="display:inline-block;">
					<%= image_tag a.image.url, width: "200px", height: "180px" %></br>
					<div align="center">
						<%= link_to "Remove", articles_remove_image_path(id: a.id) %>
					</div>
				</div>
			<% end %>
			<% str="Add More Images" %>
		<% else %>
			<% str="Add an Image" %>
		<% end %>
		</br></br>
		<%= f.label :images_array, str %></br>
		<%= f.file_field :images_array, multiple: true%>
	</p>
	</br></br>
	<p>
		<%= f.submit %>
	</p>
<% end %> 